<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
    android:id="@+id/result_field"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:hint="Result"
    android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="C"
            android:textSize="30sp"
            />
        <Button
            android:onClick="onNumberClick"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="SAVE"
            android:textSize="30sp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:onClick="onOperationClick"
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:onClick="onOperationClick"
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="-"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:onClick="onOperationClick"
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="*"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:onClick="onNumberClick"
            android:id="@+id/nul"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:onClick="onOperationClick"
            android:id="@+id/equally"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="="
            android:textSize="30sp" />

        <Button
            android:onClick="onOperationClick"
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="/"
            android:textSize="30sp" />

    </LinearLayout>

</LinearLayout>
